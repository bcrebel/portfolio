---
import '@/styles/globals.css';
import { Image } from 'astro:assets';
import github from '../../public/github.svg';
import linkedin from '../../public/linkedin.svg';
import bluesky from '../../public/bluesky.svg';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Carron White</title>
	</head>
	<body class="bg-black text-white">
		<div class="p-5 md:p-12 mx-auto max-w-screen-lg">
			<slot />
		</div>
		<footer class="h-32 p-5 flex justify-center align-center mt-10 bg-green w-screen sticky">
			<ul>
				<li>
					<a href="https://github.com/bcrebel"><Image src={github} height="40" alt="Github"  /></a>
				</li>
				<li>
					<a href="https://www.linkedin.com/in/carronwhite/"><Image src={linkedin} height="40" alt="LinkedIn"  /></a>
				</li>
				<li>
					<a href="https://bsky.app/profile/carronwhite.bsky.social"><Image src={bluesky} height="40" alt="Bluesky" /></a>
				</li>
			</ul>
		</footer>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'PP Mori-Regular';
		src: url('/portfolio/fonts/PPMori-Regular.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'PP Mori-SemiBold';
		src: url('/portfolio/fonts/PPMori-SemiBold.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	footer ul {
		@apply flex justify-center items-center space-x-4;
	}

	h1 {
		@apply font-display text-4xl text-white mt-10 leading-tight;
	}

	h2 {
		@apply font-display text-3xl;
	}
	
	h4 {
		@apply font-sans uppercase text-lime tracking-widest text-sm;
	}

	h5 {
		@apply font-sans text-lg mt-3;
	}

	.fancy-link {
		@apply text-white uppercase tracking-widest decoration-4 underline-offset-[14px] underline decoration-lime;
	}

	hr {
		@apply w-full mt-10 h-[1px] mx-auto my-auto bg-gray-100 border-0;
	}
</style>
