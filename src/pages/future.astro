---
import Detail from '../layouts/Detail.astro';
import { Image } from 'astro:assets';
import futureScreen from '../../public/future-screenshot.png';
 
---

<Detail>
    <h2>Future</h2>
    <p class="mt-2">A SPA that enables trainers to explore exercises from the Future catalog. Built with React, Next.js, and TanStack Virtual </p>
    <hr class="mt-4"/>
	<section>
        <a class="fancy-link" href="https://github.com/bcrebel/future-exercises">View Code</a>
        <Image src={futureScreen} alt="Future app screenshot" />
     </section>
</Detail>